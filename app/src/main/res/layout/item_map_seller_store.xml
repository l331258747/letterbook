<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_list_seller_store_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_list_seller_store_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_list_seller_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大兵家串串火锅"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginStart="9dp"
        app:layout_constraintTop_toTopOf="@+id/iv_list_seller_store_header"
        app:layout_constraintLeft_toRightOf="@+id/iv_list_seller_store_header"
        />

    <TextView
        android:id="@+id/tv_list_seller_store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开福区北辰三角洲凤凰店"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_list_seller_store_header"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_seller_store_header"
        />

    <ImageView
        android:id="@+id/iv_seller_store_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_list_seller_store_chat"
        app:layout_constraintTop_toTopOf="@+id/iv_list_seller_store_header"
        app:layout_constraintBottom_toBottomOf="@+id/tv_list_seller_store_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100M"
        android:layout_marginEnd="15dp"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@+id/tv_list_seller_store_address"
        app:layout_constraintBottom_toBottomOf="@+id/tv_list_seller_store_address"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        />







</androidx.constraintlayout.widget.ConstraintLayout>