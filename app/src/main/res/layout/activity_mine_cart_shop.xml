<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:overScrollMode="never"
        android:layout_above="@+id/layout_bottom"/>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/cb_all"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:button="@drawable/item_selector_checked"
            android:layout_marginStart="15dp"
            android:paddingLeft="10dp"
            android:text="全选"
            android:textColor="@color/black_666666"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_goods_seet"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_cart_settle"
            android:gravity="center"
            android:text="@string/go_settle_cart"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:layout_marginRight="12dp"
            android:id="@+id/tv_all_goods_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_goods_seet"
            android:text="@string/rmb_total"
            android:textColor="@color/color_red_EC1919"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_all_goods_money"
            android:text="合计："
            android:textColor="@color/black_666666"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>