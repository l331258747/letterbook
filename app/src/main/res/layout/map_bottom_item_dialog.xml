<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:foreground="@drawable/map_bottom_item_color"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">


            <com.csxs.viewlib.NiceImageView
                android:id="@+id/iv_seller_header"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_header"
                android:scaleType="fitXY"
                app:corner_radius="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <TextView
            android:id="@+id/tv_seller_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="大兵家串串火锅"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_seller_header"
            app:layout_constraintTop_toTopOf="@+id/iv_seller_header" />

        <ImageView
            android:id="@+id/iv_map_store_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_map_store_task"
            app:layout_constraintBottom_toBottomOf="@+id/tv_seller_store_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_seller_store_name"
            app:layout_constraintTop_toTopOf="@+id/tv_seller_store_name" />

        <TextView
            android:id="@+id/tv_seller_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="开福区北辰三角洲凤凰海2栋3楼"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_seller_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_seller_store_name" />

        <TextView
            android:id="@+id/tv_store_map_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_store_map_tag_radius"
            android:paddingStart="6dp"
            android:paddingTop="1dp"
            android:paddingEnd="6dp"
            android:paddingBottom="1dp"
            android:text="美食"
            android:textColor="@color/color_red_EC1919"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_seller_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_seller_store_address" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="距我位置222米"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_store_map_type_tag"
            app:layout_constraintLeft_toRightOf="@+id/tv_store_map_type_tag"
            app:layout_constraintTop_toTopOf="@+id/tv_store_map_type_tag" />


        <TextView
            android:id="@+id/tv_seller_store_activies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_seller_activities"
            android:text="活动标题活动标题"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_seller_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_distance" />


        <TextView
            android:id="@+id/tv_cash_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_coupon_store"
            android:drawablePadding="2dp"
            android:text="现金红包"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_seller_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_seller_store_activies" />


        <com.csxs.viewlib.DrawableCenterTextView
            android:id="@+id/tv_seller_map_navigation"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="路线"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/ic_address_line"
            android:textColor="@color/white"
            android:background="@drawable/bg_tv_attention_seller"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>