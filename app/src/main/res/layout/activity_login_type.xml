<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <ImageView-->
<!--        android:id="@+id/iv_bg"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--         />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000">
        <RelativeLayout
            android:id="@+id/rl_mask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >


            <ImageView
                android:id="@+id/iv_logo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_login_type"
                android:layout_centerHorizontal="true"
               />
            <ImageView
                android:id="@+id/iv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo_login"
                android:src="@drawable/ic_text_login_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"/>

            <Button
                android:id="@+id/login_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:background="@drawable/bg_button_radius"
                android:textColor="#333333"
                android:layout_below="@+id/iv_text"
                android:layout_marginTop="212dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手机登录"
                android:background="@drawable/bg_button_radius_alph"
                android:textColor="@color/white"
                android:layout_below="@+id/login_wx"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="让每一个人有一个专属于她们的故事"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:textSize="12sp"
        android:textColor="@color/white"/>


</RelativeLayout>