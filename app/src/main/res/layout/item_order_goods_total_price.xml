<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_footer_root"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_cart_child_goods_bottom_radius">

    <TextView
        android:id="@+id/tv_order_rmb_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="@string/rmb_order_total"
        android:textColor="@color/color_red_EC1919"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_order_count_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toLeftOf="@+id/tv_order_rmb_money"
        android:text="@string/rmb_all_count"
        android:textColor="@color/black_999999"
        android:layout_marginTop="10dp"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_order_rmb_money">

        <TextView
            android:id="@+id/tv_order_pay"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="支付订单"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_red_EC1919"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:background="@drawable/bg_order_btn_red"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_order_cancle"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="取消订单"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black_666666"
            android:background="@drawable/bg_order_btn_fff"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_confirm_receipt"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="确认收货"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_red_EC1919"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:background="@drawable/bg_order_btn_red"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_order_delete"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="删除订单"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black_666666"
            android:background="@drawable/bg_order_btn_fff"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:drawablePadding="10dp"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_order_remind"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="提醒发货"
            android:textSize="14sp"
            android:textColor="@color/black_666666"
            android:background="@drawable/bg_order_btn_fff"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:visibility="gone"/>

    </RelativeLayout>



</RelativeLayout>