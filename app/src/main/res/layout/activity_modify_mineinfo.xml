<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fadingEdge="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mine_photo_wall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:overScrollMode="never"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="头像"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <com.csxs.viewlib.CircleImageView
                android:id="@+id/ci_mine_header"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/iv_more_image"
                android:src="@drawable/ic_header" />

            <ImageView
                android:id="@+id/iv_more_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_mine_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="昵称"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:drawablePadding="10dp"
                android:gravity="right|center_vertical"
                android:hint="请填写昵称"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_gender"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="性别"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:gravity="right|center_vertical"
                android:drawablePadding="10dp"
                android:hint="未设置"
                android:text=""
                android:textColor="@color/black_333333"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_age"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="年龄"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:gravity="right|center_vertical"
                android:drawablePadding="10dp"
                android:hint="未设置"
                android:text=""
                android:textColor="@color/black_333333"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_emotion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="情感"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:drawablePadding="10dp"
                android:hint="未设置"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/black_333333"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_area_location"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="地区"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_area_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:drawablePadding="10dp"
                android:hint="请选择你的地址"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/black_333333"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="个性标签"
                android:textColor="@color/black_333333"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>


            <com.csxs.viewlib.LabelsView
                android:id="@+id/ll_tag_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tag_text"
                app:labelBackground="@drawable/bg_mine_tag"
                app:labelTextColor="@drawable/lable_param_text_color"
                app:labelTextHeight="wrap_content"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="15dp"
                app:labelTextPaddingRight="15dp"
                app:labelTextPaddingTop="5dp"
                app:labelTextSize="12sp"
                app:labelTextWidth="wrap_content"
                app:lineMargin="10dp"
                app:maxSelect="8"
                app:minSelect="1"
                app:wordMargin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:drawablePadding="10dp"
                android:hint="请选择你的标签"
                android:text=""
                android:gravity="right|center_vertical"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rl_signed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/ic_mine_more"
                android:text="个性签名"
                android:textColor="@color/black_333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_signed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/tv_signed_text"
                android:ellipsize="end"
                android:hint="主人很懒什么都没留下"
                android:lines="3"
                android:text=""
                android:textColor="@color/black_333333"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>