<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/last_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_cart_child_goods_bottom_radius">
    <View
        android:id="@+id/view_order_coupon_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_ececec"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_order_pay"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="支付订单"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_red_EC1919"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:background="@drawable/bg_order_btn_red"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_order_cancle"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="取消订单"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black_666666"
            android:background="@drawable/bg_order_btn_fff"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_confirm_receipt"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="确认收货"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_red_EC1919"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:background="@drawable/bg_order_btn_red"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_order_delete"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="删除订单"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black_666666"
            android:background="@drawable/bg_order_btn_fff"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:drawablePadding="10dp"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_order_remind"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="提醒发货"
            android:textSize="14sp"
            android:textColor="@color/black_666666"
            android:background="@drawable/bg_order_btn_fff"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>