<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_addtess"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_item_normal_bg"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:clickable="true"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_location_image"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_location_order"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_normal_bg"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_location_image"
        >
        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="叶流"
            android:includeFontPadding="false"
            android:layout_marginStart="8dp"
            android:textColor="@color/black_333333"
            android:textSize="13sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/user_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="15573137454"
            android:textColor="@color/black_999999"
            android:layout_toRightOf="@+id/tv_user_info"
            android:layout_marginStart="8dp"
            android:textSize="13sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:text="@string/location_order_str"
            android:textColor="@color/black_333333"
            android:textSize="13sp"
            android:layout_below="@+id/tv_user_info"
            android:layout_marginTop="4dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_mine_more"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>




</LinearLayout>