<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_perfect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="67dp"
        android:src="@drawable/ic_text_perfect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_perfect_text_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/perfect_text_tip"
        android:textColor="@color/black_cccccc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_perfect" />

    <ImageView
        android:id="@+id/iv_user_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo_login_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_perfect_text_tip" />


    <ImageView
        android:id="@+id/iv_iv_user_header_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_prefect_camera"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_header"
        app:layout_constraintCircle="@+id/iv_user_header"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_user_header" />



    <EditText
        android:id="@+id/et_input_user_nickname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/bg_et_radius"
        android:drawableStart="@drawable/ic_perfect_nickname"
        android:drawablePadding="10dp"
        android:hint="@string/perfect_input_niackname"
        android:paddingStart="20dp"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/bg_cursor_color"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_header" />


    <ImageView
        android:id="@+id/iv_perfect_man"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_perfect_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_perfect_woman"
        app:layout_constraintTop_toBottomOf="@+id/et_input_user_nickname"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_select_perfrct_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_prefect_sex_select"
        app:layout_constraintBottom_toBottomOf="@+id/iv_perfect_man"
        app:layout_constraintCircle="@+id/iv_perfect_man"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_perfect_man"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_text_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="我是男生"
        app:layout_constraintLeft_toLeftOf="@+id/iv_perfect_man"
        app:layout_constraintRight_toRightOf="@+id/iv_perfect_man"
        app:layout_constraintTop_toBottomOf="@+id/iv_perfect_man" />


    <ImageView
        android:id="@+id/iv_perfect_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_perfect_man"
        app:layout_constraintLeft_toRightOf="@+id/iv_perfect_man"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input_user_nickname"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_select_perfrct_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_prefect_sex_select"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_perfect_woman"
        app:layout_constraintCircle="@+id/iv_perfect_woman"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_perfect_woman" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="我是女生"
        app:layout_constraintLeft_toLeftOf="@+id/iv_perfect_woman"
        app:layout_constraintRight_toRightOf="@+id/iv_perfect_woman"
        app:layout_constraintTop_toBottomOf="@+id/iv_perfect_woman" />


    <TextView
        android:id="@+id/tv_perfect_userinfo_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/bg_button_radius_black"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="完成"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_man"
     />

    <ImageView
        android:id="@+id/iv_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_bottom_login"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>