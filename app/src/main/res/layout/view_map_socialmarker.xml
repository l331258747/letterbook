<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="45dp"
    android:layout_height="57dp">


    <ImageView
        android:id="@+id/iv_bg_marker"
        android:layout_width="45dp"
        android:layout_height="57dp"
        android:src="@drawable/ic_map_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.csxs.viewlib.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0.5dp"
        android:src="@drawable/ic_perfect_man"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg_marker"
        app:layout_constraintRight_toRightOf="@+id/iv_bg_marker"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_marker" />

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_vip"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_marker"
        app:layout_constraintCircle="@+id/iv_bg_marker"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="16dp"
        app:layout_constraintRight_toRightOf="@+id/iv_bg_marker" />

    <ImageView
        android:id="@+id/iv_expression"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_expression_smile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>